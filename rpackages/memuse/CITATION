year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

citHeader("To cite the memuse package or memuse vignette:")

citEntry(
  entry = "Misc",
  title = "{memuse}: Memory Estimation Utilities",
  author = personList(as.person("Drew Schmidt")),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=memuse",
  textVersion = NULL,
  key = "memusePackage"
)

citEntry(
  entry = "Manual",
  title = "Guide to the memuse Package",
  author = personList(as.person("Drew Schmidt")),
  year = year,
  note = "{R} package vignette",
  url = "https://cran.r-project.org/package=memuse",
  textVersion = NULL,
  key = "memusePackageGuide"
)
